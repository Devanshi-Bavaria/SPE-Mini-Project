pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "calculator"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Devanshi-Bavaria/SPE-Mini-Project.git'
            }
        }

        stage('Build Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}")
                }
            }
        }

        stage('Push Image') {
            steps {
                script {
                    docker.withRegistry('', 'DockerHubCred') {
                        sh "docker tag calculator gasolinaaa/calculator:latest"
                        sh "docker push gasolinaaa/calculator:latest"
                    }
                }
            }
        }

        stage('Run Ansible') {
            steps {
                ansiblePlaybook(
                    playbook: 'deploy.yml',
                    inventory: 'inventory'
                )
            }
        }
    }
}
